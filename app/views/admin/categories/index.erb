<div class="page-header">
	<h1>Categoria</h1>
</div>

<p><%= link_to "Nova categoria", new_admin_category_path, class: 'btn btn-sm btn-primary btn-novo' %></p>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Opções</th>
              </tr>
            </thead>
            <tbody>
	            <% @categories.each do |category| %>
              	<tr>
                	<td><%= category.id %></td>
                	<td><%= category.name %></td>
                	<td>
                		<%= link_to "Editar", edit_admin_category_path(category), class: 'btn btn-sm btn-info' %> 
						<%= link_to "Deletar", admin_category_path(category) , data: { method: :delete, confirm: "Deseja deletar?"},class: 'btn btn-sm btn-danger' %>
					</td>
              	</tr>
	            <% end %>
            </tbody>
        </table>
    </div>
</div>