<%= form_for [:admin, operator] do |f| %>
	<div class="form-group">
	  <%= f.label :name %>:
	  <%= f.text_field :name,class: 'form-control' %>
	</div>
	<div class="form-group">
	  <%= f.label :email %>:
	  <%= f.email_field :email,class: 'form-control' %>
	</div>
	<div class="form-group">
	  <%= f.label :sector_id %>:
	  <%= f.select :sector_id, Sector.pluck(:name,:id), {},class: 'form-control' %> 
	</div>
	<div class="row">
	    <div class="col-md-3 col-md-offset-5">
		  <%= f.submit "Salvar",class: "btn btn-sm btn-success" %>
		  <%= link_to "Deletar", admin_operators_path(operator) , data: { method: :delete},class: 'btn btn-sm btn-danger' %>
	  	  <%= link_to "Voltar", :back, class: "btn btn-sm btn-default" %>
	  </div>
	</div>
<% end %>